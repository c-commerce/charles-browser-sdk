{
  "name": "@heycharles/browser-sdk",
  "version": "4.256.0",
  "description": "The Browser SDK for the Charles APIs.",
  "keywords": [],
  "main": "dist/charles.js",
  "module": "dist/charles.js",
  "typings": "dist/types/charles.d.ts",
  "files": [
    "package.json",
    "package-lock.json",
    "dist",
    "CHANGELOG.md"
  ],
  "author": "Robert Jefe Lindstaedt <robert.lindstaedt@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/c-commerce/charles-browser-sdk.git"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "license": "Apache-2.0",
  "engines": {
    "node": ">=12.0.0"
  },
  "scripts": {
    "lint": "eslint src/**/*.ts test/**/*.ts",
    "prebuild": "rimraf dist",
    "build:main": "tsc -p tsconfig.release.json",
    "build:docs": "typedoc --out docs --hideGenerator  --excludeExternals --excludeProtected --categorizeByGroup true --defaultCategory \"Misc.\" --theme minimal src",
    "build:bundle": "tsc --module commonjs -p tsconfig.release.json",
    "build": "npm run clean && npm run build:bundle",
    "clean": "rimraf dist docs",
    "test": "cross-env TZ=Europe/Berlin jest --coverage",
    "test:watch": "cross-env TZ=Europe/Berlin jest --watchAll --runInBand",
    "tdd": "npm run test:watch",
    "test:prod": "npm run lint && npm run test -- --coverage --no-cache --runInBand",
    "deploy-docs": "ts-node tools/gh-pages-publish",
    "coverage": "codecov",
    "precommit": "npm run lint && git add -A",
    "commit": "git-cz",
    "semantic-release": "semantic-release",
    "semantic-release-prepare": "ts-node tools/semantic-release-prepare",
    "new:entity": "hygen entity with-prompt"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    },
    "validate-commit-msg": {
      "types": "conventional-commit-types",
      "helpMessage": "Use \"npm run commit\" instead, we use conventional-changelog format :) (https://github.com/commitizen/cz-cli)"
    }
  },
  "jest": {
    "transform": {
      "\\.(ts|tsx)$": "ts-jest"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "watchPathIgnorePatterns": [
      "<rootDir>/dist"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/dist"
    ],
    "transformIgnorePatterns": [
      "<rootDir>/dist"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/",
      "/src/@types/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 1,
        "functions": 1,
        "lines": 1,
        "statements": 1
      }
    },
    "collectCoverage": false
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/exec": "^7.1.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/npm": "^13.1.3",
    "@types/dotenv": "^8.2.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.19.7",
    "@types/qs": "^6.9.1",
    "@types/readable-stream": "^2.3.12",
    "@types/serialize-error": "^4.0.1",
    "@types/ws": "^8.5.0",
    "axios-mock-adapter": "^1.17.0",
    "browserify": "^16.2.3",
    "codecov": "^3.1.0",
    "colors": "^1.3.3",
    "commitizen": "^4.2.3",
    "common-tags": "^1.8.0",
    "core-js": "^2.6.1",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "dotenv": "^8.2.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^17.0.0",
    "husky": "^0.14.3",
    "hygen": "^6.1.0",
    "jest": "^30.2.0",
    "jest-localstorage-mock": "^2.4.26",
    "lodash.camelcase": "^4.3.0",
    "prettier": "^3.8.0",
    "prismjs": "^1.15.0",
    "prompt": "^1.0.0",
    "replace-in-file": "^3.4.2",
    "rimraf": "^3.0.2",
    "runtypes": "^4.1.0",
    "semantic-release": "^25.0.2",
    "shelljs": "^0.8.4",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "tsify": "^5.0.4",
    "typedoc": "^0.28.16",
    "typescript": "5.4.2",
    "typescript-eslint": "^8.53.0",
    "validate-commit-msg": "^2.14.0"
  },
  "dependencies": {
    "@types/just-safe-get": "^1.3.0",
    "@types/tapable": "^1.0.5",
    "axios": "0.21.1",
    "date-fns": "^2.20.1",
    "events": "^3.1.0",
    "just-diff": "^5.1.1",
    "just-omit": "^1.1.0",
    "just-pick": "^4.2.0",
    "just-safe-get": "^2.0.0",
    "just-template": "^1.2.0",
    "just-typeof": "^2.0.0",
    "mqtt": "^4.2.6",
    "qs": "^6.6.0",
    "readable-stream": "^3.6.0",
    "serialize-error": "^4.1.0",
    "tapable": "^1.1.3",
    "tslib": "^2.3.1",
    "url-parse": "^1.4.7"
  },
  "release": {
    "verifyConditions": [
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git"
    ],
    "prepare": [
      "@semantic-release/npm",
      "@semantic-release/changelog",
      {
        "path": "@semantic-release/git",
        "assets": [
          "package.json",
          "package-lock.json",
          "CHANGELOG.md"
        ],
        "message": "chore(release): Release ${nextRelease.version} - <%=new Date().toLocaleDateString('en-US', {year: 'numeric', month: 'short', day: 'numeric', hour: 'numeric', minute: 'numeric' })%> [skip ci]\n\n${nextRelease.notes}"
      }
    ],
    "publish": [
      "@semantic-release/npm",
      "@semantic-release/github"
    ]
  },
  "packageManager": "npm@11.7.0+sha512.c22099a6fff8d5b2286c2a09df5352b4858a7c0c716320f58989d60ad8b29ecf2ce6fdfe97ccb41c23ffb1272e1fa079f868487dd6b81d02a2a9e199c095a117"
}
